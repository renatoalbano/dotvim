" clipboard
vmap <C-c> "*yy
vmap <C-x> "*dd
vmap <C-v> "*pp

" tabs navigation
nmap <leader>t :tabnew<CR>
nmap <C-l> :tabnext<CR>
nmap <C-h> :tabprevious<CR>
nmap <leader>p :bnext<CR>
nmap <leader>n :bprevious<CR>

" tab binds
nmap <leader>tn :tabnext<CR>
nmap <C-l> :tabnext<CR>
nmap <leader>tp :tabprevious<CR>
nmap <C-h> :tabprevious<CR>
nmap <leader>p :bnext<CR>
nmap <leader>n :bprevious<CR>
